option '-A','--all','enable all modules'
option '-N','--node','enable all modules for node.js'
option '-t','--timers','enable timers polyfill'
option '-S','--shim','enable es5 polyfill'
option '-g','--global','`global` is one reference for global object on node and browser'
option '-i','--iz','enable iz'
option '-f','--function','enable extend Function and Function.prototype'
option '-o','--object','enable extend Object'
option '-a','--array','enable extend Array and Array.prototype'
option '-n','--number','enable extend Number and Number.prototype'
option '-s','--string','enable extend String.prototype'
option '-r','--regexp','enable extend RegExp and RegExp.prototype'
option '-d','--date','enable extend Date and Date.prototype'
option '-h','--es6','enable ES6 polyfill'
option '-x','--es6c','enable ES6 collections (Map and Set) polyfill'
option '-e','--events','enable EventEmitter'
option '-c','--console','enable console'
option '-l','--ls','enable wrapers for piping in LiveScript'
option '-p','--path [PATH]','output file'
option '-m','--min','minify output file'
task 'build','build lib',(opt)->
  require 'LiveScript'
  require('./make') opt,(script)->require('fs').writeFile opt.path||'index.js',script